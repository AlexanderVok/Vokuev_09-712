
#include <pch.h>
#include <omp.h>
#include <stdio.h>

int main() {

	int a[12], b[12], c[12];

	//omp_set_dynamic(0);
	//omp_set_num_threads(3);
#pragma omp parallel num_threads(3)
	{
#pragma omp for schedule(static)
		for (int i = 0; i < 12; i++) {
			a[i] = i * 2;
			b[i] = i * 3;
			printf("working %d of %d threads\n", omp_get_thread_num(), omp_get_num_threads());
		}
	}

	for (int i = 0; i < 12; i++) {
		printf("%d ", a[i]);
	} printf("\n");

	for (int i = 0; i < 12; i++) {
		printf("%d ", b[i]);
	} printf("\n");


	omp_set_num_threads(1);

#pragma parallel omp for schedule(dynamic, 2)
	for (int i = 0; i < 12; i++) {
		c[i] = a[i] + b[i];
		printf("working %d of %d threads\n", omp_get_thread_num(), omp_get_num_threads());
	}

	for (int i = 0; i <12; i++) {
		printf("%d ", c[i]);
	} printf("\n");



}
